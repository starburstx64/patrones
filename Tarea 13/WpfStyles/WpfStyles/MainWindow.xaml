<Window x:Class="WpfStyles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStyles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Button x:Name="button" Style="{StaticResource DefaultButton}" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="169,106,0,0" Height="50"/>
        <Button x:Name="button1" Style="{StaticResource CancelButton}" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Margin="420,106,0,0" Height="55"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="331,244,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Blue"></Setter>
                </Style>
            </Button.Style>
        </Button>
        
    </Grid>
</Window>
