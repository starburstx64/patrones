<Window x:Class="WpfDynamicResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDynamicResources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Background="{DynamicResource color}" BorderBrush="{DynamicResource bordercolor}" BorderThickness="10"
            Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="212" Margin="241,101,0,0" Height="74"/>
    </Grid>
</Window>
