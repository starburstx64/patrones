        xmlns:local="clr-namespace:WpfMultimedia"
        mc:Ignorable="d"
        Title="MainWindow" Height="476" Width="540">
    <Grid Margin="0, 0, 0, -3">
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="227*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>-->
        <MediaElement Name="media" Source="Play" Height="400" Width="500" Margin="16,72,16,95" LoadedBehavior="Manual"/>

        <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Left" Margin="101 371 0 0" VerticalAlignment="Top" Click="PlayButton_Click"/>

        <Button x:Name="MuteButton" Content="Mute" HorizontalAlignment="Left" Margin="192 371 0 0" VerticalAlignment="Top" Click="MuteButton_Click"/>
    </Grid>
</Window>
