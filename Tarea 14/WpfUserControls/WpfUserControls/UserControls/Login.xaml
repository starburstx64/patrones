<UserControl x:Class="WpfUserControls.UserControls.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUserControls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="0,0,467,356">
        <Label x:Name="lbl_UserName" Content="User Name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Password" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0 26 0 0"/>
        <TextBox x:Name="txt_UserName" HorizontalAlignment="Left" Height="23" Margin="89,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txt_Password" HorizontalAlignment="Left" Margin="89 32 0 0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Submit" Content="Submit" HorizontalAlignment="Left" Margin="0 61 0 0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
